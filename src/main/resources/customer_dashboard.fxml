<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600" prefWidth="800" styleClass="dashboard-root" stylesheets="@style/dashboard.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.busreservationsystem.controllers.CustomerDashboardController">

    <VBox fx:id="vbox" alignment="TOP_CENTER" layoutX="203.0" layoutY="26.0" prefWidth="380" spacing="30" styleClass="vbox-container">

        <Label fx:id="welcomeLabel" styleClass="welcome-text" text="Welcome, [Customer Name]!" />
        <Label fx:id="idLabel" styleClass="welcome-text" text="Customer ID: [Customer ID]" />

        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#goToRegisterBus" styleClass="dashboard-button" text="Add New Bus" />
            <Button onAction="#goToReserveSeat" styleClass="dashboard-button" text="Reserve Seat" />
        </HBox>

        <Button onAction="#handleLogout" styleClass="logout-button" text="Logout" />

    </VBox>

     <ScrollPane fitToWidth="true" layoutX="9.0" layoutY="276.0" prefHeight="321.0" prefWidth="779.0" style="-fx-background-color: transparent;">
         <content>
             <VBox fx:id="reservationList" spacing="10" />
         </content>
     </ScrollPane>

</AnchorPane>
