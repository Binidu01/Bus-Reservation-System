<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600" prefWidth="800" styleClass="dashboard-root" stylesheets="@style/dashboard.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.busreservationsystem.controllers.BusSearchController">

    <VBox alignment="TOP_CENTER" layoutX="150" layoutY="50" prefWidth="500" spacing="20" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="50.0">

        <Label styleClass="label-title" text="Search Buses" textFill="WHITE">
         <font>
            <Font size="20.0" />
         </font></Label>

        <HBox alignment="CENTER" spacing="15">
            <TextField fx:id="startPointField" prefWidth="200" promptText="Start Point" />
            <TextField fx:id="endPointField" prefWidth="200" promptText="End Point" />
            <Button onAction="#handleSearch" prefHeight="43.0" prefWidth="114.0" styleClass="dashboard-button" text="Search" />
        </HBox>

        <TableView fx:id="busTableView" prefHeight="350" prefWidth="500">
            <columns>
                <TableColumn fx:id="busNumberCol" prefWidth="100" text="Bus Number" />
                <TableColumn fx:id="seatsCol" prefWidth="80" text="Total Seats" />
                <TableColumn fx:id="startPointCol" prefWidth="100" text="Start Point" />
                <TableColumn fx:id="endPointCol" prefWidth="100" text="End Point" />
                <TableColumn fx:id="startTimeCol" prefWidth="80" text="Start Time" />
                <TableColumn fx:id="fareCol" prefWidth="40" text="Fare" />
            </columns>
        </TableView>

    </VBox>

</AnchorPane>
