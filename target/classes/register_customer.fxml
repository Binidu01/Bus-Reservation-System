<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="root" minHeight="589.0" prefHeight="589.0" prefWidth="800" styleClass="root" stylesheets="@style/register.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.busreservationsystem.controllers.RegisterCustomerController">

    <VBox fx:id="vbox" alignment="CENTER" layoutX="257.0" layoutY="102.0" maxWidth="400" prefWidth="400" spacing="15" styleClass="vbox-container">

        <Label styleClass="label-title" text="Customer Registration" />

        <TextField fx:id="nameField" promptText="Full Name" styleClass="text-field" />
        <TextField fx:id="mobileField" promptText="Mobile Number" styleClass="text-field" />
        <TextField fx:id="emailField" promptText="Email Address" styleClass="text-field" />
        <TextField fx:id="cityField" promptText="City" styleClass="text-field" />
        <TextField fx:id="ageField" promptText="Age" styleClass="text-field" />
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="password-field" />

        <Button onAction="#registerCustomer" styleClass="button-register" text="Register" />

        <HBox alignment="CENTER" spacing="5">
            <Label styleClass="label-login-text" text="Already Registered?" />
            <Hyperlink onAction="#goToLogin" styleClass="hyperlink-login" text="Login" />
        </HBox>

    </VBox>
</AnchorPane>
