<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.beans.binding.Bindings?>

<AnchorPane styleClass="root"
            stylesheets="@style/login.css"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.busreservationsystem.controllers.LoginController"
            prefWidth="800" prefHeight="600">

    <VBox fx:id="vbox"
          spacing="20"
          styleClass="vbox-container"
          prefWidth="380"
          layoutX="210"
          layoutY="100"
          alignment="CENTER">

        <Label styleClass="label-title" text="Login"/>

        <TextField fx:id="emailField" promptText="Email" styleClass="text-field"/>
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field"/>
        <Button onAction="#handleLogin" styleClass="login-button" text="Login"/>

        <HBox alignment="CENTER" spacing="5">
            <Label text="Not Registered?" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"/>
            <Hyperlink text="Register" onAction="#goToRegister" styleClass="hyperlink"/>
        </HBox>
    </VBox>
</AnchorPane>
